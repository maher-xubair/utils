{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist", 
    "strict": true,
    "esModuleInterop": true, 
    "moduleResolution": "Node",
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "resolveJsonModule": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}