{
  "name": "@nexoracle/utils",
  "version": "1.1.15",
  "description": "A blazing-fast, flexible, and dependency-free utility library for JavaScript & TypeScript.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser/index.js" 
    }
  },
  "scripts": {
    "build": "tsup lib/index.ts --format cjs,esm --dts --out-dir dist && tsup lib/browser/validation.ts --format iife --global-name=NexOracleUtils --out-dir dist/browser",
    "dev": "tsup lib/index.ts --format cjs,esm --dts --out-dir dist --watch",
    "clean": "rm -rf dist .tsbuildinfo",
    "release": "npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maher-xubair/utils.git"
  },
  "bugs": {
    "url": "https://github.com/maher-xubair/utils/issues"
  },
  "homepage": "https://utils.nexoracle.com",
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/nexoracle"
  },
  "sideEffects": false,
  "keywords": [
    "utils",
    "utility-library",
    "javascript",
    "typescript",
    "performance",
    "zero-dependency",
    "esm",
    "cjs",
    "developer-tools",
    "nodejs"
  ],
  "author": "NexOracle (Maher Zubair) - support@nexoracle.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsup": "^7.2.0",
    "typescript": "^5.8.2"
  }
}
